<html>
    <head>
        <%- include('../../partials/head'); %>
    </head>

<body>

    <header>
        <%- include('../../partials/header'); %>
    </header>

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 bg-light">
        <h1>Cities</h1>

        <ul>
            <% cities.forEach(function(city) { %>
              <li>
                <span style="display: inline-block; width: 100px; text-align: start;"><a href="/admin/city/<%= city.uuid %>"><%= city.uuid.substr(city.uuid.length-8) %>...</a></span>
                <strong><%= city.nameEl %></strong> <%= city.nameEn %>
                - <a href="https://www.google.com/maps/search/?api=1&query=<%= city.lat %>,<%= city.lng %>" target="_blank">map</a>
              </li>
            <% }); %>
        </ul>
    </div>

    <footer>
        <%- include('../../partials/footer'); %>
    </footer>

</body>
</html>