<html>
    <head>
        <%- include('../partials/head'); %>
    </head>

<body>

    <header>
        <%- include('../partials/header'); %>
    </header>

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 bg-light">
        <h1>Localities</h1>

        <ul>
            <% 
                citiyUuidToCityMap = {};
                cities.forEach(function(city) { 
                    citiyUuidToCityMap[city.uuid] = city;
                }); %>
        </ul>
    
        <ul>
            <% localities.forEach(function(locality) { %>
              <li>
                <strong><%= locality.nameEl %> [<%= locality.nameEn %>]</strong>
                of <%= citiyUuidToCityMap[locality.cityUuid].nameEl %> [<%= citiyUuidToCityMap[locality.cityUuid].nameEn %>]
                - <a href="https://www.google.com/maps/search/?api=1&query=<%= locality.lat %>,<%= locality.lng %>" target="_blank">map</a>
              </li>
            <% }); %>
        </ul>
    </div>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>